{
  "description": "Automatically parse keywords of tmall title",
  "manifest_version": 2,
  "name": "TMall Keyword",
  "version": "1.0",
  "icons": {
    "48": "icons/beasts-48.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "alarms"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "TMallKeyword"
  },

  "background": {
    "scripts": ["common.js", "background-script.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery/jquery-1.4.min.js", "common.js"]
    },
    {
      "matches": ["https://s.taobao.com/*"],
      "js": ["content-script-tm.js"]
    }
  ]
}
